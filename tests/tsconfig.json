{
  "compileOnSave": false,
  "buildOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "sourceMap": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es6",
    "skipLibCheck": true,
    "lib": [
      "dom",
      "es6",
      "scripthost",
      "es2015",
      "es2020.Promise"
    ],
    "jsx": "react",
    "noEmitHelpers": false,
    "noUnusedLocals": false,
    "allowUnreachableCode": true,
    "allowJs": true,
    "strictNullChecks": false,
    "baseUrl": ".",
  },
  "exclude": [
    "node_modules"
  ]
}
